<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Logview: <%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="/css/bootstrap.css" />
    <link rel="stylesheet" href="/css/bootstrap-responsive.css"  />
    <link rel="stylesheet" href="/css/style.css" />

    <!--[if lt IE 9]>
      <script src="/js/html5shiv.js"></script>
    <![endif]-->
  </head>

  <body>

    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container-fluid">
          <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a id="brand" class="brand" href="/">Scribely <span class="title">Logview</span></a>
          <div class="nav-collapse collapse">
            <form class="navbar-search pull-right">
              <input id="filter-log-text" type="text" class="search-query" placeholder="Filter logs by text..." class="span3" />
            </form>
            <ul class="nav">
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div class="container-fluid">
      <div class="row-fluid">
        <div class="span9">
          <%- body %>
        </div><!--/span-->
        <div class="span3">
          <div class="well sidebar-nav sidebar-nav-fixed">
            <ul class="nav nav-list">
              <li class="nav-header">Logging level</li>
              <li>
                <label class="checkbox">
                    <input class="checkbox-loglevel" type="checkbox" value="verbose" checked />
                    Verbose
                </label>
                <label class="checkbox">
                    <input class="checkbox-loglevel" type="checkbox" value="info" checked />
                    Info
                </label>
                <label class="checkbox">
                    <input class="checkbox-loglevel" type="checkbox" value="warning" checked />
                    Warning
                </label>
                <label class="checkbox">
                    <input class="checkbox-loglevel" type="checkbox" value="error" checked />
                    Error
                </label>
              </li>
            </ul>
          </div><!--/.well -->
        </div><!--/span-->
      </div><!--/row-->

    </div>

    <script src="/js/jquery.min.js"></script>
    <script src="/js/jquery.localtime.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <%- script %>

  </body>
</html>
